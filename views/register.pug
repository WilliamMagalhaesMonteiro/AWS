html
  head
    title Login
    link(rel='stylesheet', href='/style.css')
    link(rel="icon" href="images/prouge32x32.png" type="image/x-icon")
    script(src='reg_script.js' defer) 
  body
    div(id='titre')
      img(src='/pictionary.png', id='pictionary')
    div(class='login')
      h1 Cr√©er un compte
      form(method='POST', action='/register', onsubmit='return validateInputs()', id='form')
        input(id='usrname', type='text', name='username', placeholder="Nom d'utilisateur", value=username, required)
        input(id='pwd', type='password', name='password', placeholder='Mot de passe', required)
        input(id='pwd_conf', type='password', name='confirm_password', placeholder='Confirmer le mot de passe', required)
        input(type='submit', value='Valider')
      form(method='GET', action='/', id='retour')
        input(type='submit', value='Retour')
    if message
      p.error= message
